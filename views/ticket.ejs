<%-include('partials/header')-%>

<section class=" container mt-5">
    <h1 class="mb-5">Ticket</h1>
    <div class="text-center">
        <p>You have succesfully registered for this event. This ticket will be sent to your mail.</p>

        <p>Do well to present this ticket for verification.</p>
    </div>
</section>

<div class="container border w-75 my-5 py-5 px-3">
    <div class="qrcode">
        <img src=<%=data.qrCode%> alt="qrcode">
    </div>
    <div class="mt-5 ">
        <div>
            <p><span  class="fw-bold">First Name</span><br><%=data.user.email%></p>
        </div>
        <div>
            <p><span  class="fw-bold">Last Name</span><br><%=data.user.email%></p>
        </div>
        <div>
            <p><span  class="fw-bold">Email:</span><br><%=data.user.email%></p>
        </div>
    </div>

    <div class="buttons d-flex justify-content-around mt-5">
        <button class="btn btn">Share event</button>
        <button class="btn btn-success"><a href="/" class="text-decoration-none text-white rounded">Done</a></button>
    </div>
</div>


<%-include('partials/footer')-%>