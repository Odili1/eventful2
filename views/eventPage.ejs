        <div class="buttons d-flex justify-content-around my-5">
            <!-- <button type="submit" class="btn btn-danger rounded "><a class="text-white" href="">Delete</a></button> -->


            <!-- Edit Button -->
            <!-- Button trigger modal -->
            <button
            onclick=""
            class="btn btn-success rounded"
            data-bs-toggle="modal"
            data-bs-target="#abc<%=data.events._id%>"
            >
            apply
            </button>

            <!-- Modal -->
            <div
            class="modal fade"
            id="abc<%=data.events._id%>"
            tabindex="-1"
            aria-labelledby="exampleModalLabel"
            aria-hidden="true"
            >
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="exampleModalLabel">
                            <%= data.events.eventTitle %>
                            </h1>
                            <button
                            type="button"
                            class="btn-close"
                            data-bs-dismiss="modal"
                            aria-label="Close"
                            ></button>
                        </div>
                        <form
                            action="/event/<%=data.events._id%>/ticket"
                            method="post"
                        >
                            <!-- First Name -->
                            <div class="modal-body">
                                <label for="task" class="form-label">First Name:</label>
                                <input
                                    type="text"
                                    class="form-control"
                                    id="firstname"
                                    placeholder="Enter First Name"
                                    name="firstname"
                                />
                            </div>
                            <!-- Last Name -->
                            <div class="modal-body">
                                <label for="task" class="form-label">Last Name:</label>
                                <input
                                type="text"
                                class="form-control"
                                id="lastname"
                                placeholder="Enter Last Name"
                                name="lastname"
                                
                                />
                            </div>
                            <!-- Email -->
                            <div class="modal-body">
                                <label for="task" class="form-label">Email:</label>
                                <input
                                    type="email"
                                    class="form-control"
                                    id="email"
                                    placeholder="Enter Email"
                                    name="lastname"
                                    
                                />
                            </div>
                            <!-- Reminder date -->
                            <div class="modal-body">
                                <label for="task" class="form-label">Set Reminder:</label>
                                <input
                                    type="datetime-local"
                                    class="form-control"
                                    id="setReminder"
                                    name="setReminder"
                                    
                                />
                            </div>
                            <div class="modal-footer">
                                <button
                                    type="button"
                                    class="btn btn-secondary"
                                    data-bs-dismiss="modal"
                                >
                                    Close
                                </button>
                                <button type="submit" class="btn btn-primary">
                                    Apply
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    
</div>

